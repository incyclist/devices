{
	"compilerOptions": {
		"target": "ES2015",
    "esModuleInterop": true,
    "allowJs": true,
		"module": "commonjs",
        "declaration": true,
        "outDir": "lib",
        "removeComments": true
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "tools/src/*.ts"
      ],
    "exclude": [
      "build/**/*.*",
      "tools/build/**/*.ts",
      "src/**/*.spec.*",
      "src/**/*.test.*",
        "src/**/*.tests.*",
        "./node_modules" 
      ]
}