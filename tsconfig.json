{
	"compilerOptions": {
		"target": "es2024",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false,
		"module": "esnext",
        "declaration": true,
        "moduleResolution": "bundler",
        "outDir": "lib",
        "removeComments": true
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
      ],
    "exclude": [
      "build/**/*.*",
      "tools",
      "src/**/*.spec.*",
      "src/**/*.test.*",
        "src/**/*.tests.*",
        "./node_modules" 
      ]
}